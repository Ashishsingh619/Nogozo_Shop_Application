<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_height="wrap_content"
    android:id="@+id/header">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:src="@drawable/nogozo_drawer_header_icon"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/drawerHeaderShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Store Name"
        android:drawableStart="@drawable/ic_profile"
        android:drawableTint="#FFFFFF"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/drawerHeaderPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout" />

    <TextView
        android:id="@+id/drawerHeaderPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:drawableStart="@drawable/ic_phone"
        android:drawableTint="#FFFFFFFF"
        android:drawablePadding="5dp"
        android:textColor="#FFFFFF"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/drawerHeaderShopAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/drawerHeaderShopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Store Address"
        android:drawableStart="@drawable/ic_location"
        android:drawableTint="#99FFFFFF"
        android:drawablePadding="5dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>